{{ prometheus_var_config | to_nice_yaml(indent=2) }}
{% if prometheus_node_exporter_group %}
- job_name: node_exporter
  scrape_interval: 15s
  static_configs:
  - targets:
{% for host in groups[prometheus_node_exporter_group] %}
    - {{ hostvars[host].private_ip_address }}:9100
{% endfor %}
{% endif %}
